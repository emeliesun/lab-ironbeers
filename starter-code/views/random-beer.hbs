{{#each randomBeer}}
<div id="theBeerInfoFrame">
    <div id="theBeerInfo">
        <img src="{{this.image_url}}" alt="Beer-IMG" class="beer-IMG">
    </div>
    <div id="theBeerInfo">
            <h3>{{this.name}}</h3>
            <p><font color="#9ea4ad">{{this.tagline}}</font></p>
            <p>{{this.description}}</p>
            <p><b>Food Pairing: </b></p>
            <ul>
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                 {{/each}}
            </ul>
            <p><b >Brewer tips: </b>{{this.brewers_tips}}</p>
    </div>
</div>
{{/each}}